# √âtape 1 : Build
FROM node:18-alpine AS builder

WORKDIR /app

# Copier les fichiers de d√©pendances
COPY package*.json ./

# Installer TOUTES les d√©pendances (y compris devDependencies pour TypeScript)
RUN npm install

# Copier tout le code source
COPY . .

# Compiler TypeScript vers JavaScript (g√©n√®re le dossier dist/)
RUN npm run build

# √âtape 2 : Production Runner (image plus l√©g√®re)
FROM node:18-alpine

WORKDIR /app

# Copier les fichiers de d√©pendances
COPY package*.json ./

# Installer UNIQUEMENT les d√©pendances de production
RUN npm install --only=production

# Copier le dossier dist compil√© depuis l'√©tape builder
COPY --from=builder /app/dist ./dist

# Variables d'environnement par d√©faut
ENV PORT=3000
ENV NODE_ENV=production

EXPOSE 3000

# üî¥ CORRECTION ICI : Le point d'entr√©e est server.js, pas index.js !
CMD ["node", "dist/server.js"]